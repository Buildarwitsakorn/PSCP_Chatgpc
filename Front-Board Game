    <script>
        const buttons = document.querySelectorAll('.play-button'); // เลือกปุ่มทั้งหมด
        const link = "https://airtable.com/appZcfuXz2XriaZA0/shrot5j8Tskvn4QBW?fbclid=IwY2xjawGQfZJleHRuA2FlbQIxMAABHUszMkk5hNeSFwQYmQJ59Yn96V8vs3WC7t4q3rPn3_U2RHlpmJQgHyX2GA_aem_H9VFWoc-ZBHc8s0b6puT7Qhttps://l.facebook.com/l.php?u=https%3A%2F%2Fairtable.com%2FappZcfuXz2XriaZA0%2Fshrot5j8Tskvn4QBW%3Ffbclid%3DIwZXh0bgNhZW0CMTAAAR2vVKXXL28YThnSpS8HDvxMHHroyrUbbrX6rnLn8ezWn6zAxtI52bXGTi8_aem_RGSNB2GLUa-aagVNjTk-EQ&h=AT3XiK7NCIGe8Cr2G5szNZEOVAKf7zdhSJ9q6b3NLo2Tx5hnYgNHLphbxz0H5Dfr5M4UZIJ_ElPFb2542WsQ86p3poAMkQb6GigkeKlihaBxPi5ZjB66J7qid5Ir8-v7QGQm2pZvzojdblU";
    
        buttons.forEach(button => {
            let isActive = false; // สถานะของปุ่ม
    
            button.addEventListener('click', () => {
                isActive = !isActive; // สลับสถานะเมื่อกดปุ่ม
                if (isActive) {
                    button.classList.add('active'); // เพิ่มคลาสเพื่อเปลี่ยนสี
                    window.location.href = link; // เปลี่ยนไปที่ลิงก์ที่กำหนด
                } else {
                    button.classList.remove('active'); // เอาคลาสออกเพื่อคืนค่ากลับ
                }
            });
        });
    </script>
